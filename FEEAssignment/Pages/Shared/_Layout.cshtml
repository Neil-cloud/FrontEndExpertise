@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FEEAssignment</title>
    <link rel="stylesheet" href="https://mwf-service.akamaized.net/mwf/css/bundle/1.53.1/west-european/default/mwf-main.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Identity/css/site.css" />
    <style>
        .logo-image {
            width: 235px;
            height: 35px;
        }

        .brand-separator {
            border-left: 2px solid black;
            display: inline;
            padding: 9px 0;
        }

        .gray-bg {
            background-color: lightgray;
        }

        .login-compartment {
            text-align: center;
            width: -webkit-fill-available;
        }

        .login-box {
            max-width: 675px;
            max-height: 725px;
            padding: 50px;
            background-color: white;
            margin: 250px auto;
            display: inline-block;
            width: -webkit-fill-available;
            text-align: justify;
        }

        .username-width {
            max-width: 400px !important;
        }
    </style>
</head>
<body class="gray-bg">
    <header class="header-parent">
        <div data-grid="col-12">
            <nav class="navbar navbar-expand-lg bg-white header-nav">
                <div class="navbar-brand toggle-container header-brand">
                    <button class="navbar-toggler navbar-toggle-button nav-button rounded-0 border-0" type="button"
                            data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarToggle"
                            aria-label="Toggle navigation" [attr.aria-expanded]="isExpanded">
                        <span class="c-glyph" [ngClass]="{
                'glyph-cancel': isExpanded,
                'glyph-global-nav-button': !isExpanded
              }"></span>
                    </button>
                    <a class="navbar-brand ml-2 ml-lg-0 header-brand" [routerLink]="['/']">
                        <img id="logo" class="logo-image" alt="MAQ Software" src="../../assets/images/MAQSoftware.png" />
                    </a>
                    <div class="brand-separator d-none d-lg-inline" aria-hidden="true"></div>
                </div>

                <div class="collapse navbar-collapse" id="navbarToggle">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <div class="c-heading-5 x-p-t-4x">OND Priority - Develop Technical Expertise</div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer border-top text-muted">
        <div class="container">
            &copy; 2020 - FEEAssignment - <a asp-area="" asp-page="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/Identity/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
